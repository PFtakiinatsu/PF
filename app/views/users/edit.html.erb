<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <label for="user_name">ユーザーネーム</label></br>
    <%= f.text_field :name, autofocus: true, placeholder:"名前" %>
    <%= f.attachment_field :profile_image, fallback: "no_image.jpg" %>
  </div>
  <div>
    <label for="user_goal">目標</label></br>
    <%= f.text_field :goal %>
  </div>
  <div>
    <label for="user_body">自己紹介</label></br>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>