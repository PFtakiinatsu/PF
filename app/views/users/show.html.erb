<h1>マイページ</h1>
<p>ユーザー名</p>
<%= @user.name %>
<%= attachment_image_tag @user, :profile_image, size:"50x50" %>
<p>目標<p>
<%= @user.goal %>
<p>自己紹介</p>
<%= @user.introduction %>
  <div>
    <%= link_to "保存した質問", edit_user_path(@user) %>
  </div>


<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<div>
  <p>投稿した質問</p>
    <table>
      <tr>
        <th>科目</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>理解度</th>
        <th>コメント数</th>
        <th>ステータス</th>
      </tr>
      <% @questions.each do |question| %>
      <tr>
        <td><%= question.subject %></td>
        <td><%= link_to question.title, question_path(question.id) %></td>
        <td><%= link_to question.body.truncate(30), question_path(question.id) %></td>
        <td><%= question.status %></td>
        <td><%= question.comments.count %></td>
        <td><%= question.is_solved ? "解決済み":"回答受付中" %></td>
      </tr>
      <% end %>
    </table>
</div>

<div>
  <p>保存した質問</p>
    <table>
      <tr>
        <th>科目</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>理解度</th>
        <th>コメント数</th>
        <th>ステータス</th>
      </tr>
      <% @bookmark_list.each do |question| %>
      <tr>
        <td><%= question.subject %></td>
        <td><%= link_to question.title, question_path(question.id) %></td>
        <td><%= link_to question.body.truncate(30), question_path(question.id) %></td>
        <td><%= question.status %></td>
        <td><%= question.comments.count %></td>
        <td><%= question.is_solved ? "解決済み":"回答受付中" %></td>
      </tr>
      <% end %>
    </table>
</div>

<div>
  <p>回答した質問</p>
    <table>
      <tr>
        <th>科目</th>
        <th>タイトル</th>
        <th>内容</th>
        <th>理解度</th>
        <th>コメント数</th>
        <th>ステータス</th>
      </tr>
      <% @answered_question.each do |question| %>
      <tr>
        <td><%= question.subject %></td>
        <td><%= link_to question.title, question_path(question.id) %></td>
        <td><%= link_to question.body.truncate(30), question_path(question.id) %></td>
        <td><%= question.status %></td>
        <td><%= question.comments.count %></td>
        <td><%= question.is_solved ? "解決済み":"回答受付中" %></td>
      </tr>
      <% end %>
    </table>
</div>

