<main>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
  <div class="form-wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if @user.errors.any? %>
        <div id="error-explanation">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <h1>新規登録</h1>
    <form>
      <div class="form-item">
        <label for="name"></label>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム" %>
      </div>
      <div class="form-item">
        <label for="email"></label>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
      <div class="form-item">
        <label for="password"></label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>
      <div class="button-panel">
        <%= f.submit "新規登録", class: "button" %>
      </div>
    </form>
    <div class="form-footer">
      <p>登録済みの方は<%= link_to "こちら", new_user_session_path %></p>
    </div>
    <% end %>
  </div>
</main>
