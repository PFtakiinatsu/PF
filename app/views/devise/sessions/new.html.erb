<main>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
    <div class="form-wrapper">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if @user.errors.any? %>
        <div id="error-explanation">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h1>ログイン</h1>
      <form>
        <div class="form-item">
          <label for="email"></label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
        <div class="form-item">
          <label for="password"></label>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
        </div>
        <div class="button-panel">
          <%= f.submit "ログイン", class: "button" %>
        </div>
      </form>
      <div class="form-footer">
        <p><%= link_to "新規登録", new_user_registration_path %></p>
      </div>
      <% end %>
    </div>
</main>