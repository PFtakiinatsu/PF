<% if question.bookmarked_by?(current_user) %>
    <p>
      <%= link_to question_bookmarks_path(question.id), method: :delete, remote: true do %>
        ♥<%= question.bookmarks.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to question_bookmarks_path(question.id), method: :post, remote: true do %>
        ♡<%= question.bookmarks.count %> いいね
      <% end %>
    </p>
<% end %>